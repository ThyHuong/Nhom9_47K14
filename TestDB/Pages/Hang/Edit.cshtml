@page
@model TestDB.Pages.Hang.EditModel
@{
    ViewData["Title"] = "Sửa thông tin hàng hóa";
}
<h2>Sửa thông tin hàng hoá</h2>
<br />

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="MaH" value="@Model.hangInfo.MaH">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tên hàng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TenHang" value="@Model.hangInfo.TenHang">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Giá nhập</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="GiaNhap" value="@Model.hangInfo.GiaNhap">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Giá bán</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="GiaBan" value="@Model.hangInfo.GiaBan">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Hang/Hang" role="button">Huỷ</a>
        </div>
    </div>
</form>
