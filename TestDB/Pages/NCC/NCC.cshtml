@page
@model TestDB.Pages.NCC.NCCModel
@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
}
<script src="https://kit.fontawesome.com/5a213e1813.js" crossorigin="anonymous"></script>
<div style="background-color:#1877F2;">
    <hr />
    <h1 style="text-align:center; color:white">NHÀ CUNG CẤP</h1>
    <hr />
</div>
<br />
<div style="display:flex;">
    <form method="post" style="width:70%;">
        <div class="col-sm-6" style="display:flex; width:100%;">
        <input type="text" class="form-control" style="margin-right: 30px;" name="Search" value="@Model.searchInfo.Search">
        <button type="submit" style="background-color:white; border-color:lightgray; color:black;" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
    </form>
    <div style="margin-left: 37.8%;">
        <a class="btn btn-primary btn-sm" style="background-color:#0dac50; float:right; margin-right: 68px; width: 90px; height:40px; padding-bottom: 0;
        padding-top: 8px;" href="/NCC/Create">Thêm mới</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Mã nhà cung cấp</th>
            <th>Tên nhà cung cấp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var NCC in Model.listNCC)
        {
            <tr>
                <td>@NCC.MaNCC</td>
                <td>@NCC.TenNCC</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/NCC/Edit?MaNCC=@NCC.MaNCC">Sửa</a>
                    <a class="btn btn-danger btn-sm" href="/NCC/Delete?MaNCC=@NCC.MaNCC">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
