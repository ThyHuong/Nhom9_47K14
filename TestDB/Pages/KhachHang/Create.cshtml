@page
@model TestDB.Pages.KhachHang.CreateModel
@{
    ViewData["Title"] = "Thêm khách hàng mới";
}
<h2>Thêm khách hàng mới</h2>
<br />
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3" style="display:none;">
        <label class="col-sm-3 col-form-label">Mã khách hàng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="MaKH" value="@Model.khInfo.MaKH">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tên khách hàng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TenKH" value="@Model.khInfo.TenKH" required>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Số điện thoại</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="SDT" value="@Model.khInfo.SDT" required>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/KhachHang/KhachHang" role="button">Huỷ</a>
        </div>
    </div>
</form>
